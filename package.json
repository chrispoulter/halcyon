{
    "name": "@halcyon/halcyon",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "start": "concurrently \"yarn:api:start\" \"yarn:client:start\"",
        "client:start": "react-scripts start",
        "client:build": "react-scripts build",
        "postclient:build": "yarn client:workbox",
        "client:workbox": "workbox injectManifest workbox-config.js",
        "api:start": "serverless offline start",
        "api:build": "serverless client build --command client:build",
        "api:deploy": "serverless deploy",
        "servapierless:remove": "serverless remove",
        "db:install": "serverless dynamodb install",
        "db:start": "serverless dynamodb start",
        "db:seed": "babel-node scripts/seed.js",
        "db:populate": "babel-node scripts/populate.js",
        "db:remove": "rimraf ./.dynamodb/shared-local-instance.db",
        "lint": "eslint \"**/*.{js,jsx}\"",
        "format": "prettier --write \"**/*.{js,jsx,json,scss,md,yml,html}\""
    },
    "dependencies": {
        "bcryptjs": "2.4.3",
        "bootstrap": "5.0.2",
        "bootswatch": "5.0.2",
        "express": "4.17.1",
        "formik": "2.2.9",
        "jsonwebtoken": "8.5.1",
        "jwt-decode": "3.1.2",
        "nodemailer": "6.7.2",
        "react": "17.0.2",
        "react-bootstrap": "2.0.0-beta.6",
        "react-dom": "17.0.2",
        "react-helmet": "6.1.0",
        "react-router-dom": "5.2.0",
        "uuid": "8.3.2",
        "yup": "0.32.9"
    },
    "devDependencies": {
        "concurrently": "6.4.0",
        "dotenv": "10.0.0",
        "faker": "5.5.3",
        "node-sass": "6.0.1",
        "prettier": "2.5.1",
        "react-scripts": "4.0.3",
        "workbox-cli": "6.4.2"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
