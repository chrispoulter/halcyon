{
    "name": "@halcyon/halcyon",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "start": "concurrently \"yarn:api:start\" \"yarn:client:start\"",
        "build": "concurrently \"yarn:api:build\" \"yarn:client:build\"",
        "client:start": "react-scripts start",
        "client:build": "react-scripts build",
        "postclient:build": "workbox injectManifest workbox-config.js",
        "api:start": "nodemon --exec babel-node api/index.js",
        "api:build": "babel api --out-dir dist --source-maps",
        "db:seed": "babel-node scripts/seed.js",
        "db:populate": "babel-node scripts/populate.js",
        "docker:build": "docker build -t chrispoulter/halcyon .",
        "docker:run": "docker run --name halcyon --env-file .env -p 3001:3001 chrispoulter/halcyon",
        "docker:exec": "docker exec -it halcyon /bin/sh",
        "serve": "node dist/index.js",
        "lint": "eslint \"**/*.{js,jsx}\"",
        "format": "prettier --write \"**/*.{js,jsx,json,scss,md,yml,html}\""
    },
    "dependencies": {
        "bcryptjs": "2.4.3",
        "dotenv": "10.0.0",
        "express": "4.17.1",
        "jsonwebtoken": "8.5.1",
        "morgan": "1.10.0",
        "nodemailer": "6.7.2",
        "pg": "8.7.1",
        "uuid": "8.3.2",
        "winston": "3.3.3",
        "yup": "0.32.9"
    },
    "devDependencies": {
        "@babel/cli": "7.14.8",
        "@babel/core": "7.14.0",
        "@babel/node": "7.13.13",
        "@babel/preset-env": "7.14.0",
        "babel-plugin-inline-import": "3.0.0",
        "bootstrap": "5.0.2",
        "bootswatch": "5.0.2",
        "concurrently": "6.4.0",
        "formik": "2.2.9",
        "jwt-decode": "3.1.2",
        "node-sass": "6.0.1",
        "nodemon": "2.0.15",
        "postgres-migrations": "5.3.0",
        "prettier": "2.5.1",
        "react": "17.0.2",
        "react-bootstrap": "2.0.0-beta.6",
        "react-dom": "17.0.2",
        "react-helmet": "6.1.0",
        "react-scripts": "4.0.3",
        "react-router-dom": "5.2.0",
        "workbox-cli": "6.4.2"
    },
    "proxy": "http://localhost:3001",
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
