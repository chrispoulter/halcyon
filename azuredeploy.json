{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "plan": {
            "type": "string"
        },
        "web": {
            "type": "string"
        },
        "registryUrl": {
            "type": "string"
        },
        "registryUserName": {
            "type": "string"
        },
        "registryPassword": {
            "type": "string"
        },
        "logLevel": {
            "type": "string"
        },
        "dbHost": {
            "type": "string"
        },
        "dbPort": {
            "type": "string"
        },
        "dbUser": {
            "type": "string"
        },
        "dbPassword": {
            "type": "securestring"
        },
        "dbDatabase": {
            "type": "string"
        },
        "emailSmtpServer": {
            "type": "string"
        },
        "emailSmtpPort": {
            "type": "string"
        },
        "emailSmtpUserName": {
            "type": "securestring"
        },
        "emailSmtpPassword": {
            "type": "securestring"
        },
        "emailNoReplyAddress": {
            "type": "string"
        },
        "jwtSecurityKey": {
            "type": "securestring"
        },
        "jwtIssuer": {
            "type": "string"
        },
        "jwtAudience": {
            "type": "string"
        },
        "jwtExpiresIn": {
            "type": "string"
        },
        "seedEmailAddress": {
            "type": "securestring"
        },
        "seedPassword": {
            "type": "securestring"
        }
    },
    "resources": [
        {
            "name": "[parameters('web')]",
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "location": "[resourceGroup().location]",
            "kind": "app,linux",
            "properties": {
                "name": "[parameters('web')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('plan'))]"
            }
        },
        {
            "name": "[concat(parameters('web'), '/web')]",
            "type": "Microsoft.Web/sites/config",
            "apiVersion": "2020-12-01",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('web'))]"
            ],
            "properties": {
                "healthCheckPath": "/api/health"
            }
        },
        {
            "name": "[concat(parameters('web'), '/appsettings')]",
            "type": "Microsoft.Web/sites/config",
            "apiVersion": "2020-12-01",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('web'))]"
            ],
            "properties": {
                "WEBSITES_PORT": "3000",
                "DOCKER_REGISTRY_SERVER_URL": "[parameters('registryUrl')]",
                "DOCKER_REGISTRY_SERVER_USERNAME": "[parameters('registryUsername')]",
                "DOCKER_REGISTRY_SERVER_PASSWORD": "[parameters('registryPassword')]",
                "LOG_LEVEL": "[parameters('logLevel')]",
                "DATABASE_URL": "[concat('postgres://', parameters('dbUser'), ':', parameters('dbPassword'), '@', parameters('dbHost'), ':', parameters('dbPort'), '/', parameters('dbDatabase'), '?sslmode=require')]",
                "EMAIL_SMTP_SERVER": "[parameters('emailSmtpServer')]",
                "EMAIL_SMTP_PORT": "[parameters('emailSmtpPort')]",
                "EMAIL_SMTP_USERNAME": "[parameters('emailSmtpUserName')]",
                "EMAIL_SMTP_PASSWORD": "[parameters('emailSmtpPassword')]",
                "EMAIL_NO_REPLY_ADDRESS": "[parameters('emailNoReplyAddress')]",
                "JWT_SECURITY_KEY": "[parameters('jwtSecurityKey')]",
                "JWT_ISSUER": "[parameters('jwtIssuer')]",
                "JWT_AUDIENCE": "[parameters('jwtAudience')]",
                "JWT_EXPIRES_IN": "[parameters('jwtExpiresIn')]",
                "SEED_EMAIL_ADDRESS": "[parameters('seedEmailAddress')]",
                "SEED_PASSWORD": "[parameters('seedPassword')]"
            }
        }
    ]
}
